    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.adamthiede.inkmusic.ui.nowplaying.NowPlayingFragment"
        android:label="@string/title_nowplaying"
        tools:layout="@layout/fragment_nowplaying" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.adamthiede.inkmusic.ui.artists.ArtistsFragment"
        android:label="@string/title_artists"
        tools:layout="@layout/fragment_artists" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.adamthiede.inkmusic.ui.songs.SongsFragment"
        android:label="@string/title_songs"
